jQuery(document).ready(function(){
	var time = new Date();
	var hours = time.getHours();
	var minutes = time.getMinutes();
	if (hours < 10)
		hours = "0" + hours;
	if (minutes < 10)
		minutes = "0" + minutes;

	jQuery('#_progress_graph').css({ width: "{=var-get:progress=}%"});
	jQuery('#clock').html(hours+':'+minutes);
	jQuery('html head').find('title').text("yInfo");
});
