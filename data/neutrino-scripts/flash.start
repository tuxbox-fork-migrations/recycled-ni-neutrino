#!/bin/sh

if pidof vsftpd > /dev/null; then
	echo "Kill vsftpd"
	killall vsftpd
fi

if pidof ushare > /dev/null; then
	echo "Kill ushare"
	trap "" INT
	kill -INT `pidof ushare`
fi

if [ -e /var/etc/.djmount ]; then
	echo "Kill djmount"
	fusermount -u /media/00upnp
fi

## remount rootfs readonly #################
mount -no remount,ro /
RET=$?
echo -n "remount rootfs readonly "
if [ "$RET" = "0" ]; then
	echo "successful."
else
	echo "failed."
fi
############################################
